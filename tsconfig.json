{
  "compilerOptions": {
    "rootDir": "src",
    "allowJs": true,
    "outDir": "js/",
    "module": "NodeNext",
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/"
  ],
  "typeAcquisition": {
    "enable": true
  }
}