{
  "compilerOptions": {
    "rootDir": "src",
    "allowJs": true,
    "outDir": "js/",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true
  },
  "include": [
    "src/"
  ],
  "typeAcquisition": {
    "enable": true
  }
}